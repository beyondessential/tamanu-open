{
  "baseUrl": "./src",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "../shared/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    // "strict": true,
    "alwaysStrict": true,
    "target": "es2019",
    "module": "CommonJS"
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.js"
  ]
}
