{
  "name": "shared-src",
  "version": "1.20.0",
  "description": "Common code across Tamanu packages",
  "main": "index.js",
  "homepage": "https://github.com/beyondessential/tamanu.git#readme",
  "repository": "git@github.com:beyondessential/tamanu.git",
  "author": "Beyond Essential Systems Pty. Ltd.",
  "license": "SEE LICENSE IN license",
  "scripts": {
    "clean": "rm -rf ../shared",
    "prepare": "mkdir -p ../shared && cp -n shared.package.json ../shared/package.json || true",
    "compile": "yarn run prepare && yarn run babel --extensions '.js,.ts,.tsx' --root-mode upward --out-dir ../shared src",
    "build": "yarn run clean && yarn run compile && yarn run tsc --build tsconfig.json",
    "build-watch": "yarn run compile --watch",
    "test": "NODE_ENV=test jest",
    "test-coverage": "yarn test --coverage",
    "lint": "eslint src",
    "lint-stats": "eslint src --format ../scripts/eslint-stats.js"
  },
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.12",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@beyondessential/eslint-config-js": "^1.1.0",
    "@beyondessential/eslint-config-ts": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "babel-jest": "^28.1.1",
    "eslint": "^5.15.2",
    "jest": "^28.1.1",
    "sinon": "^11.1.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@casl/ability": "^4.1.0",
    "@react-pdf/renderer": "^2.1.1",
    "await-to-js": "^2.0.1",
    "bcrypt": "^3.0.1",
    "calculate-luhn-mod-n": "^2.0.12",
    "chance": "^1.1.8",
    "config": "3.0.1",
    "date-fns": "^2.19.0",
    "eslint": "^5.15.2",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.34",
    "multiparty": "^4.2.3",
    "node-schedule": "^2.0.0",
    "semver-compare": "^1.0.0",
    "semver-diff": "^3.1.1",
    "shortid": "^2.2.14"
  }
}
